# MeetScribe Environment Variables
# Copy this file to .env and fill in your credentials

# OpenAI API (for Whisper and ChatGPT)
OPENAI_API_KEY=sk-...

# Google Gemini API
GEMINI_API_KEY=...

# Anthropic Claude API
ANTHROPIC_API_KEY=sk-ant-...

# NotebookLM API
NOTEBOOKLM_API_KEY=...

# Discord Bot
DISCORD_BOT_TOKEN=...
DISCORD_GUILD_ID=...
DISCORD_CHANNEL_ID=...

# Google Cloud (for Drive/Docs)
GOOGLE_CREDENTIALS_PATH=path/to/credentials.json
GOOGLE_DRIVE_FOLDER_ID=...

# Zoom API
ZOOM_API_KEY=...
ZOOM_API_SECRET=...

# Working directory
MEETSCRIBE_WORKING_DIR=./meetings
